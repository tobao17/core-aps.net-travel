@model WebDuLich.Models.ViewModel.SaleViewModel;
@using WebDuLich.Extensions;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*@model IEnumerable<TuyenDuong>*@
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Sharelayout.cshtml";
}





<h4>
    Create Tuyến Đường
</h4>
<form method="post" enctype="multipart/form-data">
<div class="p-4 border rounded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Sale.Mota"></label>
        </div>
        <div class="col-5">
            <input asp-for="Sale.Mota" class="form-control" />
        </div>
        <span asp-validation-for="Sale.Mota" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Sale.NoiDung"></label>
        </div>
        <div class="col-5">
            <input asp-for="Sale.NoiDung" class="form-control" />
        </div>
        <span asp-validation-for="Sale.NoiDung" class="text-danger"></span>
    </div>  
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
</form>

