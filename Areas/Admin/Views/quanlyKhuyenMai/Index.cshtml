@using WebDuLich.Models.DataModel;
@model IEnumerable<Sale>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Sharelayout.cshtml";
    //WebGrid grid = new WebGrid(source: Model, rowsPerPage: 2);
}
<h4 class="mt-3">
    <span>SALE</span>
    <a class="btn btn-primary text-light" style="padding:2px" href="@Url.Action("Create","quanlyKhuyenMai")">New</a>
</h4>


<div class="d-flex align-items-center">
    <form class="ml-auto d-flex" action="/Admin/quanlyKhuyenMai/search" method="post">
        <input type="text" placeholder="Search" class="form-control" style="border-radius:5px;" name="search" value="@ViewBag.search" />
        <button class="btn btn-primary ml-2" style="border-radius:5px" ; type="submit">Search</button>
    </form>
</div>





<table class="table table-striped border">
    <caption>List of Sale</caption>
    <thead>
        <tr>
            <th>Mô tả</th>
            <th>Nội dung</th>
            

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Mota</td>
                <td>@item.NoiDung</td>               
                <td>
                    <a href="#" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a href="@Url.Action("Edit","quanlyKhuyenMai",new {@MaKM=item.MaKM })" class="table-link">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                    <a href="@Url.Action("Delete","quanlyKhuyenMai",new {MaKM=item.MaKM })" class="table-link danger">
                        <span class="fa-stack">
                            <i class="fa fa-square fa-stack-2x"></i>
                            <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                        </span>
                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>


