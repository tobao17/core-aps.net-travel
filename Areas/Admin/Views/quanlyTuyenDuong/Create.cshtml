@model WebDuLich.Models.ViewModel.TuyenDuongViewModel;
@using WebDuLich.Extensions;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@*@model IEnumerable<TuyenDuong>*@
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/Sharelayout.cshtml";
}





<h4>
    Create Tuyến Đường
</h4>
<form method="post" enctype="multipart/form-data">
<div class="p-4 border rounded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TuyenDuong.TenTuyenDuong"></label>
        </div>
        <div class="col-5">
            <input asp-for="TuyenDuong.TenTuyenDuong" class="form-control" />
        </div>
        <span asp-validation-for="TuyenDuong.TenTuyenDuong" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TuyenDuong.DiaDiemKhoiHanh"></label>
        </div>
        <div class="col-5">
            <input asp-for="TuyenDuong.DiaDiemKhoiHanh" class="form-control" />
        </div>
        <span asp-validation-for="TuyenDuong.DiaDiemKhoiHanh" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TuyenDuong.SoNgay"></label>
        </div>
        <div class="col-5">
            <input asp-for="TuyenDuong.SoNgay" class="form-control" />
        </div>
        <span asp-validation-for="TuyenDuong.SoNgay" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="LoaiTours"></label>
        </div>
        <div class="col-5">
            <select asp-for="@Model.TuyenDuong.MaLoai" asp-items="Model.LoaiTours.ToSelectListItem(Model.TuyenDuong.MaLoai)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Sales"></label>
        </div>
        <div class="col-5">
            <select asp-for="@Model.TuyenDuong.MaKM" asp-items="Model.Sales.ToSelectListItem1(Model.TuyenDuong.MaKM)" class="form-control"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TuyenDuong.NoiDung"></label>
        </div>
        <div class="col-5">
            <input asp-for="TuyenDuong.NoiDung" class="form-control" />
        </div>
        <span asp-validation-for="TuyenDuong.NoiDung" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="TuyenDuong.Anh"></label>
        </div>
        <div class="col-5">
            <input type="file" name="files" class="form-control" />
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>
</form>

