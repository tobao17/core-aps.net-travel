@using WebDuLich.Models.DataModel;
@model IEnumerable<TuyenDuong>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Sharelayout.cshtml";
    //WebGrid grid = new WebGrid(source: Model, rowsPerPage: 2);
}
<h4 class="mt-3">
    <span>TUYẾN ĐƯỜNG</span>
    <a class="btn btn-primary text-light" style="padding:2px" href="@Url.Action("Create","quanlyTuyenDuong")">New</a>
</h4>


<div class="d-flex align-items-center">
    <form class="ml-auto d-flex" action="/Admin/quanlyTuyenDuong/Search" method="post">
        <input type="text" placeholder="Search" class="form-control" style="border-radius:5px;" name="search" value="@ViewBag.search" />
        <button class="btn btn-primary ml-2" style="border-radius:5px" ; type="submit">Search</button>
    </form>
</div>





<table class="table table-striped border">
    <caption>List of Tuyen Duong</caption>
    <thead>
        <tr>
            <th>Ảnh</th>
            <th>Tuyến Đường</th>
            <th>Địa Điểm Khởi Hành</th>
            <th>Số Ngày Đi</th>
            <th>Loại Tour</th>
            <th>Sale</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td style="width: 20px">
                <img src="@Url.Content("/images/TuyenDuongImage/"+item.Anh)"  width="50" />
            </td>
            <td>@item.TenTuyenDuong</td>
            <td>@item.DiaDiemKhoiHanh</td>
            <td>@item.SoNgay</td>
            <td>@item.LoaiTour.TenLoai</td>
            <td>@item.Sale.Mota</td>
            <td>
                <a href="#" class="table-link">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="@Url.Action("Edit","quanlyTuyenDuong",new {@MaTuyenDuong=item.MaTuyenDuong })" class="table-link">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="@Url.Action("Delete","quanlyTuyenDuong",new {@MaTuyenDuong=item.MaTuyenDuong })" class="table-link danger">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
        }


    </tbody>
</table>


