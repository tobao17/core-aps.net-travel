@using WebDuLich.Models.DataModel;
@model IEnumerable<Tour>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Sharelayout.cshtml";
    //WebGrid grid = new WebGrid(source: Model, rowsPerPage: 2);
}
<h4 class="mt-3">
    <span>TOUR</span>
    <a class="btn btn-primary text-light" style="padding:2px" href="@Url.Action("Create","quanlyTour")">New</a>
</h4>


<div class="d-flex align-items-center">
    <form class="ml-auto d-flex" action="/Admin/quanlyTour/Search" method="post">
        <input type="text" placeholder="Search" class="form-control" style="border-radius:5px;" name="search" value="@ViewBag.search" />
        <button class="btn btn-primary ml-2" style="border-radius:5px" ; type="submit">Search</button>
    </form>
</div>





<table class="table table-striped border">
    <caption>List of Tour</caption>
    <thead>
        <tr>
            <th>Tuyến Đường</th>
            <th>Giá Tour</th>
            <th>Số chỗ </th>
            <td>Số người mua</td>
            <th>Ngày Khởi Hành</th>
            <th>Ngày Kết Thúc</th>
            <th>Giờ Đi</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.TuyenDuong.TenTuyenDuong</td>
            <td>@item.GiaTour</td>
            <td>@item.SoNguoiToiDa</td>
            <td>@item.SoNguoiMua</td>
            <td>@item.NgayKhoiHanh</td>
            <td>@item.NgayKetThuc</td>
            <td>@item.GioDi</td>         
            <td>
                <a href="#" class="table-link">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="@Url.Action("Edit","quanlyTour",new {@MaTour=item.MaTour })" class="table-link">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
                <a href="@Url.Action("Delete","quanlyTour",new {MaTour=item.MaTour })" class="table-link danger">
                    <span class="fa-stack">
                        <i class="fa fa-square fa-stack-2x"></i>
                        <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                    </span>
                </a>
            </td>
        </tr>
        }


    </tbody>
</table>


