                    <div class="row">
                        <div class="col main_nav_col d-flex flex-row align-items-center justify-content-start">

                            <div class="main_nav_container ml-auto">
                                <ul class="main_nav_list">
                                    <li class="main_nav_item"><a asp-controller="Home" asp-action="Index">home</a></li>
                                    <li class="main_nav_item"><a asp-controller="Tours" asp-action="Index">offers</a></li>
                                    <li class="main_nav_item"><a href="~/Travel_share/about.html">about us</a></li>

                                    <li class="main_nav_item"><a href="~/Travel_share/blog.html">news</a></li>
                                    <li class="main_nav_item"><a href="~/Travel_share/contact.html">contact</a></li>

                                    @*tìm kiếm*@
                                    @using (Html.BeginForm("TimKiem", "Tours", FormMethod.Post))
                                    {
                                        <li class="search-box">
                                            <input type="text" name="TenTuyenDuong" class="search-txt" placeholder="Type to search" />
                                            <button type="submit" class="search-btn"><i class="fa fa-search" aria-hidden="true"></i> </button>
                                        </li>
                                    }
                                </ul>
                            </div>
                            @await Html.PartialAsync("../Login/partialicon.cshtml")

                            <form id="search_form" class="search_form bez_1">
                                <input type="search" class="search_content_input bez_1">
                            </form>

                            <div class="hamburger">
                                <i class="fa fa-bars trans_200"></i>
                            </div>
                        </div>
                    </div>
                </div>
