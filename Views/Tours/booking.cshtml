<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-7 mb-5">
                <form method="post" asp-action="booking" class="p-5 bg-white">

                    <input type="hidden" name="MaTour" value="@ViewBag.id" />
                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="text-black" for="fname">Name</label>
                            <input type="text" id="fname" class="form-control" name="HoTen" placeholder="Name">
                        </div>
                        <div class="col-md-6">
                            <label class="text-black" for="lname">Phone</label>
                            <input type="text" id="lname" class="form-control" placeholder="Phone" name="SDT">
                        </div>
                    </div>
                    <div class="col-md-6" style="display:none">
                        <label class="text-black" for="lname">Phone</label>
                        <input type="text" id="lname" class="form-control" placeholder="Phone" name="giatour" value="@ViewBag.giatour">
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="treatment">How Many Person</label>
                            <input type="text" id="" class="form-control" placeholder="" name="SoNguoiDiTour">

                        </div>
                    </div>



                    <div class="row form-group">
                        <div class="col-md-12">
                            <label class="text-black" for="note">Notes</label>
                            <textarea name="Notes" id="note" cols="30" rows="5" class="form-control"
                                      placeholder="Write your notes or questions here..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Send" class="btn btn-primary py-2 px-4 text-white">
                        </div>
                    </div>


                </form>





                <div class="col-sm-12  p-5 bg-white">
                    <div class="p-b-30 ">
                        <h5 class="mtext-108 cl2 p-b-7">
                            comments
                        </h5>
                        <!-- Review -->
                        @foreach (var item in Model)
                        {
                            if (item.MaTuyenDuong == ViewBag.matuyenduong)
                            {
                                <div class=" flex-t pb-2">
                                    <div class="mr-3 mt-1">
                                        <img src="~/images/TuyenDuongImage/departure.png" alt="AVATAR" style="border-radius: 50%;">
                                    </div>

                                    <div class="size-207">
                                        <div class=" pb-3">
                                            <span class="mtext-107 cl2 p-r-20">
                                                @item.KhachHang.Username
                                            </span>

                                            <span class="fs-18 cl11">
                                                @for (int i = 1; i <= item.vote; i++)
                                                {
                                                    <i class="fas fa-star" style="font-size: small;"></i>
                                                }
                                                @{
                                                    int saorong = 5 - item.vote;

                                                }
                                                @for (int i = 1; i <= saorong; i++)
                                                {
                                                    <i class="far fa-star" style="font-size: small;"></i>

                                                }


                                            </span>
                                        </div>

                                        <p class="stext-102 cl6">
                                            @*Quod autem in homine praestantissimum atque optimum est, id
                            deseruit. Apud ceteros autem philosophos*@
                                            @item.NoiDung
                                        </p>

                                    </div>

                                </div>

                            }

                        }
                        @if (ViewBag.soluongbinhluan >2)
                        {
                            <div class="d-flex justify-content-end pb-5">
                                <a class="" style="right:0px" href="#">read more</a>
                            </div>
                        }


                        <!-- Add review -->
                        <form method="post" asp-action="comment" class="w-full">

                            <h5 class="mtext-108 cl2 p-b-7">
                                Add a review
                            </h5>

                            <p class="stext-102 cl6">
                                Your email address will not be published. Required fields are marked *
                            </p>

                            <div class="flex-w flex-m pt-4 p-b-23">
                                <span class="stext-102 cl3 m-r-16">
                                    Your Rating
                                </span>

                                <span class="wrap-rating fs-18 cl11 pointer">
                                    <i class="item-rating pointer far fa-star" style="font-size: small;"></i>
                                    <i class="item-rating pointer far fa-star" style="font-size: small;"></i>
                                    <i class="item-rating pointer far fa-star" style="font-size: small;"></i>
                                    <i class="item-rating pointer far fa-star" style="font-size: small;"></i>
                                    <i class="item-rating pointer far fa-star" style="font-size: small;"></i>
                                    <input class="dis-none" type="number" name="vote">
                                </span>
                            </div>

                            <div class="row p-b-25">
                                <div class="col-12 p-b-5">
                                    <label class="stext-102 cl3" for="review">Your review</label>
                                    <textarea class="form-control" rows="3" id="comment" name="NoiDung"></textarea>
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <input type="submit" value="submit" class="btn btn-primary py-2 px-4 text-white">
                                </div>
                            </div>

                            <input type="hidden" name="MaTour" value="@ViewBag.id" />
                            <input type="hidden" name="MaTuyenDuong" value=" @ViewBag.matuyenduong" />

                        </form>
                    </div>
                </div>

            </div>
            <div class="col-md-5">
                @{ 
                    var item1 = Model.First();
                }


                <div class="p-4 mb-3 bg-white">
                    <img src="~/images/TuyenDuongImage/@item1.TuyenDuong.Anh" alt="Image" class="img-fluid mb-4 rounded">
                    <h3 class="h5 text-black mb-3">@item1.TuyenDuong.TenTuyenDuong</h3>
                    <p>
                        @item1.TuyenDuong.NoiDung
                    </p>
                    <p><a asp-action="Index" asp-controller="Tours" class="btn btn-primary px-4 py-2 text-white">Learn More</a></p>
                </div>

            </div>
        </div>
    </div>
</div>
